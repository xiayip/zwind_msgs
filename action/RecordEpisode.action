# RecordEpisode.action
# Action for recording a single LeRobot episode via VR teleoperation

# Goal - Request from VR to start recording
string repo_id                    # HuggingFace dataset repo ID (e.g., "myuser/z1_dataset")
string task_description           # Task description for this episode
float32 episode_duration          # Episode recording duration in seconds (default: 60.0)
float32 reset_duration            # Environment reset duration in seconds (default: 10.0)

---
# Result - Returned when recording completes
bool success                      # Whether recording succeeded
string message                   # Status message or error description

---
# Feedback - Real-time progress updates during recording
string status                    # Current status: "recording", "resetting", "saving", "pushing"
float32 progress                 # Progress percentage 0.0-1.0
